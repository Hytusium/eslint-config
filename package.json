{
  "name": "@hytusium/eslint-config",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "author": "kash / Hytus <kash@hytus.net>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "lint": "run-p \"lint:*\"",
    "lint:eslint": "eslint \"**/*.{js,ts}\"",
    "lint:prettier": "prettier --check \"**/*.{js,ts}\"",
    "format": "run-p \"format:*\"",
    "format:eslint": "eslint \"**/*.{js,ts}\" --fix",
    "format:prettier": "prettier --write \"**/*.{js,ts}\"",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@hytusium/eslint-config-typescript": "workspace:.",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "npm-run-all2": "6.1.2",
    "prettier": "3.2.5",
    "typescript": "5.4.3",
    "typescript-eslint": "7.3.1"
  },
  "packageManager": "yarn@4.1.1",
  "engines": {
    "node": "^18.18.0 || >=20.0.0"
  }
}
